.showCounts
    display flex 
    justify-content: space-between
    align-items: center
    margin 20px 0
    .showCount_box
        width 30% 
        height: 110px
        background #ccc
        position relative 
        overflow: hidden
        h5 
            position absolute
            font-size 16px 
            color #fff 
            font-weight bold
            top 10px 
            left 10px
        p
            position absolute 
            font-size 48px 
            color #fff 
            right 15px 
            bottom 15px
            line-height: 40px
        i
            display block
            position absolute 
            top 0
            left 0
            width 100% 
            text-align: center
            font-size 144px
            color #fbfbfb
            vertical-align: top
            line-height: 107px
            opacity .2
            // transform: scale(1,1.1)
    .showCount_box.showCount_box_building
        background #ff9a2a
    .showCount_box.showCount_box_idle
        background #7fbc39
    .showCount_box.showCount_box_count
        background #fff
        display flex 
        justify-content: space-between
        align-items: center
        padding 10px 0
        box-sizing border-box
        .count_wrap
            width 30% 
            height 100%
            span 
                display flex 
                width 100% 
                height 50%
                text-align center 
                vertical-align: bottom
                justify-content: center
                align-items: center
            span.type_name
                font-size 12px
            span.type_num 
                font-size 20px
                font-weight: 500

                