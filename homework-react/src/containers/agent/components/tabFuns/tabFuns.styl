.tabFuncs
    display flex 
    width 100% 
    height 50px 
    background #fff 
    margin 20px 0
    box-sizing: border-box
    justify-content: space-between
    align-items: center
    .tabs_search
        display flex 
        align-items: center
        .tabs_wrap
            height 50px
            span 
                display inline-block
                height 100%
                padding 0 25px 
                border-right 1px solid #ddd
                line-height: 50px
                box-sizing: border-box
            span.activeTab
                border-bottom 3px solid #00b4cf
        .search_wrap
            margin-left 25px 
            position relative
            i
                position absolute 
                left 5px
                top 5px 
                font-size 20px
                color #666
            input 
                background #efefef 
                border none 
                height 30px
                width 150px
                line-height: 30px
                text-indent 30px
    .sort_wrap
        margin-right 10px
        i 
            font-size 20px
            margin 0 5px
            color #666
            cursor pointer
        i.activeSort
            color #00b4cf