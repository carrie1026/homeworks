.header
    width 100% 
    height 60px
    border-bottom 1px solid #ccc
    position relative
    box-shadow: 0 1px 3px #ddd;
    background #fff
    .header_content
        width 1000px
        height 60px
        margin 0 auto
        display flex 
        justify-content: center
        align-items: center
        position relative
    .userInfo
        position: absolute 
        right 10px
        top 10px
        img 
            width 40px 
            height 40px 
            border-radius 100% 
            overflow hidden
        i 
            display inline-block
            font-size 22px
            color #999
            vertical-align: top
            margin-top 10px
            margin-left 5px
            cursor pointer
        ul 
            position absolute 
            top 50px
            right 0
            width 120px 
            background #fff 
            z-index 2
            box-shadow 0 3px 5px rgba(0,0,0,.3)
            padding 10px 0
            li
                padding 5px 10px
                display flex 
                align-items: center 
                font-size 14px
                color #666 
                cursor pointer
                i 
                    margin-right 10px
                    font-size 12px
                    vertical-align: middle
                    margin-top 0
                &:hover 
                    background #efefef
