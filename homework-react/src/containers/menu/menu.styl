.menu
    width 220px 
    height 100% 
    overflow auto
    overflow-x hidden 
    color #fff
    background #2d4054
    position relative
    .menu_list
        position relative 
        li
            height 45px 
            cursor pointer
            padding 0 30px 
            box-sizing: border-box
            display flex 
            justify-content: flex-start
            align-items: center 
            margin: 5px 0
            &:hover 
                color #00b4cf
            i 
                margin-right 10px
                font-size 20px
            span.dashboard
                margin-top: 3px
        li.activeMenu
            color #00b4cf
            background rgba(255,255,255, .1)
    .menu_history
        position absolute 
        width 100%
        height 36%
        overflow hidden 
        bottom 10px
        left 0
        padding 0 10px
        box-sizing: border-box
        font-size: 12px
        h5 
            font-size 24px
            color #ccc
        ul 
            margin-top: 10px;
            li
                position relative
                font-size 12px
                text-indent 15px
                width 100%
                overflow: hidden;
                text-overflow: ellipsis
                white-space: nowrap
                height 20px
                line-height: 20px
                color #999
                &:hover 
                    color #00b4cf
                &::before
                    content: ''
                    position absolute 
                    width 4px 
                    height 4px 
                    left 0 
                    top 8px
                    background #999999
                    border-radius 4px
        
